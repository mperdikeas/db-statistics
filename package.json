{
    "name": "archetype-ts-node-playground",
    "version": "1.0.0",
    "description": "rest syntax",
    "main": "src/index.ts",
    "scripts": {
        "clean-logs": "rm -fr npm-debug.log.*",
        "clean": "rm -fr dist && rm -fr build/index.html && rm -fr build/bundle.js && npm run clean-logs",
        "raze": "npm run clean && rm -fr node_modules",
        "build.README": "for some reason the build and exec targets fail, use the monitor target instead",
        "build": "webpack-cli --progress --color --config webpack.config.js",
        "build-min": "webpack --config=webpack.min.config.js",
        "exec": "npm run build; node dist/bundle.js",
        "compile": "babel src -d dist --extensions \".ts,.tsx\" --source-maps inline",
        "monitor.README": [
            "use this target for continuous building and running the application",
            "whenever there are changes in the sources, or package.json"
        ],
        "monitor": "LD_LIBRARY_PATH=/home/mperdikeas/software/oracle-instant-client/instantclient_21_3 npx nodemon",
        "monitor.compile": "npm run compile; nodemon -e js,ts --watch src --exec npm run compile"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@babel/cli": "^7.16.0",
        "@babel/core": "^7.15.8",
        "@babel/plugin-proposal-class-properties": "^7.14.5",
        "@babel/plugin-transform-async-to-generator": "^7.14.5",
        "@babel/preset-env": "^7.15.8",
        "@babel/preset-react": "^7.14.5",
        "@babel/preset-typescript": "^7.16.0",
        "@babel/register": "^7.15.3",
        "@babel/runtime": "^7.15.4",
        "@types/lodash": "^4.14.176",
        "@types/oracledb": "^5.2.1",
        "@types/pg": "^8.6.1",
        "babel-loader": "^8.2.2",
        "cross-env": "^7.0.3",
        "css-loader": "^6.4.0",
        "file-loader": "^6.2.0",
        "html-webpack-plugin": "^5.4.0",
        "identity-obj-proxy": "^3.0.0",
        "mocha": "^9.1.3",
        "nodemon": "^2.0.13",
        "null-loader": "^4.0.1",
        "ts-loader": "^9.2.6",
        "ts-node": "^10.3.0",
        "typescript": "^4.4.4",
        "webpack": "^5.58.2",
        "webpack-cli": "^4.9.*",
